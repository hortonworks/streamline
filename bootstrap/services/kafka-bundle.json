{
  "name": "KAFKA",
  "registerClass": "com.hortonworks.streamline.streams.cluster.register.impl.KafkaServiceRegistrar",
  "serviceUISpecification": {
    "fields": [
      {
        "uiName": "Zookeeper connection string",
        "fieldName": "zookeeper.connect",
        "isOptional": false,
        "tooltip": "A comma separated string of host:port pairs defining the Zookeeper cluster",
        "type": "string"
      },
      {
        "uiName": "Kafka listeners",
        "fieldName": "listeners",
        "isOptional": false,
        "tooltip": "A comma-separated string of listeners",
        "type": "string"
      },
      {
        "uiName": "Security Inter-broker protocol",
        "fieldName": "security.inter.broker.protocol",
        "isOptional": true,
        "tooltip": "Protocol used for inter-broker communication in secure environment",
        "type": "string"
      }
    ]
  }
}
