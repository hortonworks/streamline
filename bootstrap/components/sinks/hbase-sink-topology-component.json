{
  "type": "SINK",
  "name": "Hbase",
  "subType": "HBASE",
  "builtin": true,
  "streamingEngine": "STORM",
  "fieldHintProviderClass": "com.hortonworks.streamline.streams.cluster.bundle.impl.HBaseBundleHintProvider",
  "transformationClass": "com.hortonworks.streamline.streams.layout.storm.HbaseBoltFluxComponent",
  "mavenDeps": "org.apache.storm:storm-hbase:STORM_VERSION^org.slf4j:slf4j-log4j12^org.apache.curator:curator-client^org.apache.curator:curator-framework",
  "topologyComponentUISpecification": {
    "fields": [
      {
        "uiName": "Write to WAL?",
        "fieldName": "writeToWAL",
        "isOptional": true,
        "tooltip": "Flag to indicate whether to write to write ahead log",
        "type": "boolean",
        "defaultValue": true
      },
      {
        "uiName": "Hbase table",
        "fieldName": "table",
        "isOptional": false,
        "tooltip": "Hbase table to write to",
        "type": "enumstring",
        "options": [],
        "hint": "override"
      },
      {
        "uiName": "Column family",
        "fieldName": "columnFamily",
        "isOptional": false,
        "tooltip": "Hbase table column family",
        "type": "string"
      },
      {
        "uiName": "Row key field",
        "fieldName": "rowKeyField",
        "isOptional": true,
        "tooltip": "Field to be used as row key for table",
        "type": "enumstring",
        "options": [],
        "defaultValue": null,
        "hint": "inputFields"
      },
      {
        "uiName": "Batch Size",
        "fieldName": "batchSize",
        "isOptional": false,
        "tooltip": "Number of records in the batch to trigger flushing. Note that every batch needs to be full before it can be flushed as tick tuple is not supported currently due to the fact that all bolts in topology receive a tick tuple if enabled",
        "type": "number",
        "defaultValue": 100
      },
      {
        "uiName": "Parallelism",
        "fieldName": "parallelism",
        "isOptional": true,
        "tooltip": "Parallelism hint for hbase bolt",
        "type": "number",
        "defaultValue": 1,
        "min": 1,
        "hint": "hidden"
      }
    ]
  }
}
