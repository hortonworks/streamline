{
  "caches": [
    {
      "cache": {
        "id": "redis-cache-1",
        "type": "redis / guava / hazelcast / memcached",
        "connection": {
          "host": "localhost",
          "port": "6379",
          "pool": {
            "max-idle": 5,
            "max-active": 20
          }
        },
        "data-store": {
          "id": "data-store-redis-1",
          "type": "mysql / phoenix / hbase",
          "connection": {
            "host": "localhost",
            "port": "8888"
          },
          "load": "sync / async",
          "read": "through",
          "write": "sync / async"
        },
        "expiry-policy": {
          "ttl": {
            "count": 10,
            "unit": "seconds"
          },
          "entries": 1000,
          "size": {
            "count": 10,
            "unit": "megabytes"
          }
        },
