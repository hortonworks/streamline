{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "DataStream",
  "description": "A data stream representing IoTaS topology",
  "type": "object",
  "properties": {
      "catalogRootUrl": {
        "description": "The URL hosting IoTaS REST api",
        "type": "string",
        "format": "uri"
      },
      "dataSources": {
        "description": "List of data sources",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "title": "A data source",
          "properties": {
            "id": {
              "description": "Id of data source from IoTaS catalog",
              "type": "integer",
              "minimum": 0,
              "exclusiveMinimum": true
            },
            "type": {
              "description": "Type of data source",
              "type": "string",
              "enum": ["KAFKA"]
            },
            "uiname": {
              "description": "Name entered by the user",
              "type": "string",
              "minLength": 1
            },
            "config": {
              "type": "object",
              "title": "Config values for a type of data source",
              "minProperties": 1
            }
          },
          "required": ["uiname", "id", "type", "config"]
        }
      },
      "processors": {
        "description": "List of processors",
        "type": "array",
        "minItems": 0,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "title": "A data processor",
          "properties": {
            "uiname": {
              "description": "Name entered by the user",
              "type": "string",
              "minLength": 1
            },
            "config": {
              "description": "Array of components for this processor",
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "title": "A processor component",
                "properties": {
                  "uiname": {
                    "description": "Name entered by the user",
                    "type": "string",
                    "minLength": 1
                  },
                  "type": {
                    "description": "Type of processor component",
                    "type": "string",
                    "enum": ["RULE"]
                  },
                  "id": {
                    "description": "Id of the rule from IoTaS catalog",
                    "type": "integer",
                    "minimum": 0,
                    "exclusiveMinimum": true
                  },
                  "config": {
                    "type": "object",
                    "title": "A processor component config",
                    "minProperties": 1
                  }
                },
                "required": ["uiname", "type", "config", "id"]
              }
            }
          },
          "required": ["uiname", "config"]
        }
      },
      "dataSinks": {
        "description": "List of data sinks",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "title": "A data sink",
          "properties": {
            "type": {
              "description": "Type of data sink",
              "type": "string",
              "enum": ["HBASE", "HDFS"]
            },
            "uiname": {
              "description": "Name entered by the user",
              "type": "string",
              "minLength": 1
            },
            "config": {
              "type": "object",
              "title": "Config values for a type of data sink",
              "minProperties": 1
            }
          },
          "required": ["uiname", "type", "config"]
        }
      },
      "links": {
        "description": "List of connections",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "title": "A link",
          "properties": {
            "from": {
              "description": "From node for link",
              "type": "string",
              "minLength": 1
            },
            "to": {
              "description": "To node for link",
              "type": "string",
              "minLength": 1
            },
            "uiname": {
              "description": "Name entered by the user",
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["uiname", "from", "to"]
        }
      }
  },
  "required": ["catalogRootUrl", "dataSources", "dataSinks", "links"]
}
